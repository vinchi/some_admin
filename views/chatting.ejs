<%- include('partials/header'); %>

    <!-- Main Content -->
    <div class="content">
        <!-- Navbar -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="검색어를 입력해주세요">
                    <button class="search-btn" type="submit"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="theme-toggle" hidden>
            <label for="theme-toggle" class="theme-toggle"></label>
            <a href="#" class="notif">
                <i class='bx bx-bell'></i>
                <span class="count">12</span>
            </a>
            <a href="#" class="profile">
                <img src="./imges/logo_some_50_56.png">
            </a>
        </nav>

        <!-- End of Navbar -->

        <main>
            <div class="header">
                <div class="left">
                    
                </div>
            </div>

            <div class="chat-management">
                <div class="chat-list">

                    <div class="header">
                        <i class='bx bx-message-square-dots'></i>
                        <h3>채팅리스트</h3>

                        <div class="search-box">
                            <input type="text" class="input-search" placeholder="검색어를 입력해주세요">
                            <button class="btn-search"><i class="bx bx-search"></i></button>
                        </div>

                    </div>

                    <table id="myTable" class="display">
                        <thead>
                            <tr>
                                <th><input type="checkbox" class="all-check"></th>
                                <th class=""><a href="#">번호</a></th>
                                <th class=""><a href="#">유저1</a></th>
                                <th width="16px"></th>
                                <th class=""><a href="#">유저2</a></th>
                                <th class=""><a href="#">메세지</a></th>
                                <th class=""><a href="#">매칭 시간</a></th>
                                <th class=""><a href="#">채팅방관리</a></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                                let num = 1;
                                data.chattings.forEach(chat => {
                            %>
                                <tr>
                                    <td><input type="checkbox" class="one-check"></td>
                                    <td class="table-num"><a href="/chatting?uid=<%= chat.chat.docId %>&num=<%= num %>"><%= num %></a></td>
                                    <td class="user-1">
                                        <% if(chat.chat.mUrl) { %>
                                            <img src="<%= chat.chat.mUrl %>">
                                        <% } else { %>
                                            <img src="./imges/avatar/Avatar=13.png">
                                        <% } %>
                                        <p><%= chat.chat.mUsername %></p>
                                    </td>
                                    <td>
                                        <img src="./imges/icon/icons8-love-arrow.gif" class="icon-heart">
                                    </td>
                                    <td class="user-2">
                                        <% if(chat.chat.yUrl) { %>
                                            <img src="<%= chat.chat.yUrl %>">
                                        <% } else { %>
                                            <img src="./imges/avatar/Avatar=13.png">
                                        <% } %>
                                        <p><%= chat.chat.yUsername %></p>
                                    </td>
                                    <td class="memo"><%= chat.chat.last_message; %></td>
                                    
                                    <td><span class="date"><%= chat.chat.regDate.toDate().toLocaleString() %></span> 
                                        
                                    </td>
                                    <td class="chatting-btn"><div class="status completed">경고</div>
                                        <div class="status process">방삭제</div>
                                    </td>
                                </tr>
                            <%      
                                    num ++;
                                }); 
                            %>
                        </tbody>
                    </table>
                    <!-- pagination -->
                    <!-- <div class="chat-page">
                        <div class="showing-count">
                            <span>Showing:</span>
                            <span>1 - 5</span>
                            <span>of</span>
                            <span>78</span>
                        </div>
                        <ul class="pagination">
                            <li><a href="#"><i class='bx bx-chevrons-left' ></i></a></li>
                            <li><a href="#"><i class='bx bx-chevron-left' ></i></i></a></li>
